{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@assets/*": [
        "lib/assets/src/*"
      ],
      "@components/*": [
        "lib/components/src/*"
      ],
      "@constants/*": [
        "lib/constants/src/*"
      ],
      "@hoc/*": [
        "lib/hoc/src/*"
      ],
      "@scripts/*": [
        "lib/scripts/src/*"
      ],
      "@sockets/*": [
        "lib/sockets/src/*"
      ],
      "@style/*": [
        "lib/style/src/*"
      ],
      "@type/*": [
        "lib/type/src/*"
      ],
      "@utils/*": [
        "lib/utils/src/*"
      ]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.d.ts"],
  "exclude": ["node_modules", "tmp"]
}
