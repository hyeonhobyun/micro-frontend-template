{
  "name": "@micro-frontend-template/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "pnpm:devPreinstall": "npx only-allow pnpm && npx typesync",
    "preinstall": "npx only-allow pnpm",

    "prestart:dev": "yarn run clean:cache && yarn run generate:typeHelper",

    "start:dev": "nx affected:serve --dev",

    "start:root:dev": "NODE_OPTIONS='--inspect' NEXT_PRIVATE_LOCAL_WEBPACK=true nx serve root --verbose",
    "start:root:prod": "NEXT_PRIVATE_LOCAL_WEBPACK=true nx serve root --prod",
    "start:user:dev": "NODE_OPTIONS='--inspect' NEXT_PRIVATE_LOCAL_WEBPACK=true nx serve user --verbose",
    "start:user:prod": "NEXT_PRIVATE_LOCAL_WEBPACK=true nx serve user --prod",

    "build:root": "NEXT_PRIVATE_LOCAL_WEBPACK=true nx build root --prod",
    "build:user": "NEXT_PRIVATE_LOCAL_WEBPACK=true nx build user --prod",

    "build:all": "nx affected:build --prod",
    "build:dev": "nx affected:build --dev",

    "e2e:run:dev": "nx e2e root-e2e",
    "e2e:run:prod": "nx e2e root-e2e --prod",

    "lint": "nx affected:lint",
    "generate:typeHelper": "ts-node -P libs/script/tsconfig.json -r tsconfig-paths/register libs/script/src/typeHelper.ts",
    "postgenerate:typeHelper": "prettier --write libs/assets/dist/type/assetTypeHelper.ts"
  },
  "private": true,
  "dependencies": {
    "@stylexjs/stylex": "^0.5.1",
    "lodash-es": "^4.17.21",
    "next": "14.0.4",
    "polished": "^4.3.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tslib": "^2.3.0",
    "webpack-spritesmith": "^1.1.0"
  },
  "devDependencies": {
    "@module-federation/nextjs-mf": "^8.1.10",
    "@nx/devkit": "18.0.2",
    "@nx/eslint": "18.0.2",
    "@nx/eslint-plugin": "18.0.2",
    "@nx/jest": "18.0.2",
    "@nx/js": "18.0.2",
    "@nx/next": "18.0.2",
    "@nx/playwright": "18.0.2",
    "@nx/react": "18.0.2",
    "@nx/rollup": "18.0.2",
    "@nx/workspace": "18.0.2",
    "@playwright/test": "^1.36.0",
    "@rollup/plugin-url": "^7.0.0",
    "@stylexjs/babel-plugin": "^0.5.1",
    "@stylexjs/dev-runtime": "^0.5.1",
    "@stylexjs/eslint-plugin": "^0.5.1",
    "@stylexjs/nextjs-plugin": "^0.5.1",
    "@svgr/rollup": "^8.0.1",
    "@swc-node/register": "~1.6.7",
    "@swc/cli": "~0.1.62",
    "@swc/core": "~1.3.85",
    "@swc/helpers": "~0.5.2",
    "@testing-library/react": "14.0.0",
    "@types/eslint": "~8.56.2",
    "@types/eslint-config-prettier": "~6.11.3",
    "@types/jest": "^29.4.0",
    "@types/lodash-es": "~4.17.12",
    "@types/node": "18.16.9",
    "@types/prettier": "~2.6.4",
    "@types/react": "18.2.33",
    "@types/react-dom": "18.2.14",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "babel-jest": "^29.4.1",
    "eslint": "~8.48.0",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-playwright": "^0.15.3",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "nx": "18.0.2",
    "prettier": "^2.6.2",
    "swc-loader": "0.1.15",
